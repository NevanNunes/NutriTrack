<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nutritrack.NutriTrack.javafx.RegisterController" spacing="15" styleClass="register-container" alignment="CENTER">
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Label text="Create Your Account" styleClass="page-title"/>

    <GridPane hgap="15" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <!-- Account Credentials -->
        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" promptText="Choose a username" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="Enter your email" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" promptText="Create a password" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Confirm Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Personal Information -->
        <Label text="Full Name:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="Enter your full name" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Age:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="ageField" promptText="Enter your age" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Gender:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <ComboBox fx:id="genderComboBox" maxWidth="Infinity" promptText="Select gender" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <!-- Physical Information -->
        <Label text="Height (cm):" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="heightField" promptText="e.g., 175" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Weight (kg):" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <TextField fx:id="weightField" promptText="e.g., 70" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

        <Label text="Activity Level:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
        <ComboBox fx:id="activityLevelComboBox" maxWidth="Infinity" promptText="Select activity level" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="errorLabel" styleClass="error-label" visible="false" managed="false"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Back to Login" onAction="#handleBackToLogin" styleClass="secondary-button"/>
        <Button text="Register" onAction="#handleRegister" styleClass="primary-button"/>
    </HBox>

</VBox>
